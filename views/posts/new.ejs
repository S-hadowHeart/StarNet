<%- include('../partials/header') %>

<div class="max-w-2xl mx-auto mt-10 p-6 bg-deep rounded-xl shadow-lg border border-purple-800">
  <h1 class="text-2xl font-bold text-transparent bg-clip-text bg-gradient-to-r from-staryellow to-cosmicpink mb-6">Launch New Signal</h1>
  
  <form action="/posts" method="POST" class="space-y-4" onsubmit="return validateForm()">
    <div>
      <label for="title" class="block text-startext mb-2">Signal Title</label>
      <input type="text" id="title" name="title" required
        class="w-full px-4 py-2 bg-galaxy border border-purple-700 rounded-lg focus:outline-none focus:border-cosmicpink text-startext"
        minlength="3" maxlength="200"
        placeholder="Enter signal title">
      <p class="text-sm text-slate-400 mt-1">3-200 characters</p>
    </div>

    <div>
      <label for="content" class="block text-startext mb-2">Signal Content</label>
      <textarea id="content" name="content" required rows="4"
        class="w-full px-4 py-2 bg-galaxy border border-purple-700 rounded-lg focus:outline-none focus:border-cosmicpink text-startext resize-none"
        minlength="1" maxlength="1000"
        placeholder="Broadcast your message to the cosmos..."></textarea>
      <p class="text-sm text-slate-400 mt-1">Max 1000 characters</p>
    </div>
    
    <div>
      <label for="tags" class="block text-startext mb-2">Cosmic Tags</label>
      <input type="text" id="tags" name="tags"
        class="w-full px-4 py-2 bg-galaxy border border-purple-700 rounded-lg focus:outline-none focus:border-cosmicpink text-startext"
        placeholder="nebula, pulsar, quasar"
        pattern="[a-zA-Z0-9\s,]+">
      <p class="text-sm text-slate-400 mt-1">Add cosmic tags separated by commas</p>
    </div>
    
    <div>
      <label for="image" class="block text-startext mb-2">Cosmic Image URL (optional)</label>
      <input type="url" id="image" name="image"
        class="w-full px-4 py-2 bg-galaxy border border-purple-700 rounded-lg focus:outline-none focus:border-cosmicpink text-startext"
        placeholder="https://example.com/cosmic-image.jpg"
        pattern="https?://.+">
      <p class="text-sm text-slate-400 mt-1">Must be a valid URL</p>
    </div>
    
    <div class="flex justify-end gap-4">
      <a href="/" class="px-4 py-2 border border-purple-500 text-startext rounded-lg hover:bg-purple-700">Abort Mission</a>
      <button type="submit" 
        class="px-4 py-2 bg-nebula text-white font-semibold rounded-lg hover:bg-purple-700 transition">
        Launch Signal
      </button>
    </div>
  </form>
</div>

<%- include('../partials/footer') %>

<script>
  function validateForm() {
    const title = document.getElementById('title').value.trim();
    const content = document.getElementById('content').value.trim();
    const tags = document.getElementById('tags').value.trim();
    const image = document.getElementById('image').value.trim();
    
    if (!title) {
      alert('Please enter a signal title');
      return false;
    }
    
    if (title.length < 3) {
      alert('Signal title must be at least 3 characters');
      return false;
    }
    
    if (title.length > 200) {
      alert('Signal title cannot exceed 200 characters');
      return false;
    }
    
    if (!content) {
      alert('Please enter signal content');
      return false;
    }
    
    if (content.length > 1000) {
      alert('Signal content cannot exceed 1000 characters');
      return false;
    }
    
    if (tags && !/^[a-zA-Z0-9\s,]+$/.test(tags)) {
      alert('Cosmic tags can only contain letters, numbers, spaces, and commas');
      return false;
    }
    
    if (image && !image.startsWith('http')) {
      alert('Please provide a valid cosmic image URL');
      return false;
    }
    
    return true;
  }
</script> 